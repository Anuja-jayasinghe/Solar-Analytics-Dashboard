# Paste these into Vercel → Project → Settings → Environment Variables
# Environment: Production (and Preview if desired)

# Supabase (server-side)
SUPABASE_URL=https://<project-id>.supabase.co
SUPABASE_SERVICE_KEY=<service-role-key>

# SolisCloud (server-side)
SOLIS_API_URL=https://www.soliscloud.com:13333
SOLIS_API_ID=<solis-api-id>
SOLIS_API_SECRET=<solis-api-secret>

# Client (Vite) variables — public in browser
VITE_SUPABASE_URL=https://<project-id>.supabase.co
VITE_SUPABASE_ANON_KEY=<anon-key>

# Feature flags
VITE_ENABLE_DEVTOOLS=true
VITE_SHOW_COMING_SOON=false
